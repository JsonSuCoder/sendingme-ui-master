{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ESNext",
    "noImplicitAny": false,
    "sourceMap": false,
    "outDir": "./lib",
    "declaration": true,
    "jsx": "react",
    "lib": [
      "es2019",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
